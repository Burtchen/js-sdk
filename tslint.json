{
  "extends": ["tslint-config-airbnb", "tslint-config-prettier", "tslint-plugin-prettier"],
  "rules": {
    "align": [true, "elements", "members", "parameters", "statements"],
    "indent": [true, "spaces", 2],
    "max-line-length": [true, { "limit": 100, "ignore-pattern": "/.*/ui" }],
    "no-console": [true, "log", "error"],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "ter-indent": [true, 2],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "prettier": true
  }
}
